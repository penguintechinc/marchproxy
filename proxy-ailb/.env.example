# AILB Environment Configuration Example
# Copy this file to .env and fill in your values

# HTTP Server Configuration
HTTP_PORT=8080
HOST=0.0.0.0

# gRPC Server Configuration
GRPC_PORT=50051
MODULE_ID=ailb-1

# Routing Strategy
# Options: round_robin, cost_optimized, latency_optimized, load_balanced, failover, random
ROUTING_STRATEGY=load_balanced

# Memory Configuration
ENABLE_MEMORY=true
MEMORY_BACKEND=chromadb

# RAG Configuration
ENABLE_RAG=false
RAG_BACKEND=chromadb

# OpenAI Provider
OPENAI_API_KEY=sk-your-key-here
OPENAI_BASE_URL=
OPENAI_MODELS=gpt-4,gpt-3.5-turbo

# Anthropic Provider
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODELS=claude-3-opus-20240229,claude-3-sonnet-20240229,claude-3-haiku-20240307

# Ollama Provider (for local LLMs)
OLLAMA_BASE_URL=http://localhost:11434
