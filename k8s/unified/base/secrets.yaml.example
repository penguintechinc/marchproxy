# MarchProxy Secrets Template
# Copy this file to secrets.yaml and fill in your actual values
# IMPORTANT: Never commit secrets.yaml to version control!

apiVersion: v1
kind: Secret
metadata:
  name: marchproxy-secrets
  namespace: marchproxy
  labels:
    app.kubernetes.io/name: marchproxy
    app.kubernetes.io/component: config
type: Opaque
stringData:
  # Cluster API key for proxy registration
  cluster-api-key: "your-cluster-api-key-here"

  # Database passwords
  postgres-password: "your-postgres-password-here"
  redis-password: "your-redis-password-here"

  # License key (Enterprise)
  license-key: "PENG-XXXX-XXXX-XXXX-XXXX-ABCD"

  # AI Provider API Keys (for AILB module)
  openai-api-key: "sk-..."
  anthropic-api-key: "sk-ant-..."

  # JWT Secret for API authentication
  jwt-secret: "your-jwt-secret-here-minimum-32-characters"

  # TLS certificates (base64 encoded)
  # tls.crt: "LS0tLS1CRUdJTi..."
  # tls.key: "LS0tLS1CRUdJTi..."
  # ca.crt: "LS0tLS1CRUdJTi..."

---
# Generate random secrets using:
# cluster-api-key: openssl rand -hex 32
# jwt-secret: openssl rand -base64 48
# postgres-password: openssl rand -base64 32
# redis-password: openssl rand -base64 32
